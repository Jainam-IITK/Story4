<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/homeFragment2"
        android:name="com.jainam.story2.home.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment2_to_myPlayerFragment"
            app:destination="@id/myPlayerFragment"
            app:enterAnim="@anim/fragment_close_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popUpTo="@id/homeFragment2" />
        <action
            android:id="@+id/action_homeFragment2_to_voiceSelectionMenuFragment"
            app:destination="@id/voiceSelectionMenuFragment" />
        <action
            android:id="@+id/action_homeFragment2_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/fragment_close_enter"
            app:popEnterAnim="@anim/fragment_close_enter" />
    </fragment>
    <fragment
        android:id="@+id/myPlayerFragment"
        android:name="com.jainam.story2.player.MyPlayerFragment"
        android:label="MyPlayerFragment" >
        <argument
            android:name="uriString"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/voiceSelectionMenuFragment"
        android:name="com.jainam.story2.player.voiceSeclection.VoiceSelectionMenuFragment"
        android:label="voice_selection_menu_fragment"
        tools:layout="@layout/voice_selection_menu_fragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.jainam.story2.auth.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment2"
            app:destination="@id/homeFragment2"
            app:enterAnim="@anim/fragment_close_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.jainam.story2.bookSearch.SearchFragment"
        android:label="SearchFragment" />
</navigation>