<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

        <LinearLayout
            android:layout_width="350dp"
            android:id="@+id/musicDialogLayout"
            android:layout_height="530dp"
            android:orientation="vertical"
            android:background="@drawable/ic_dialog_background"
           >

            <TextView
                android:id="@+id/volumeTextView"
                style="@style/voiceSettingsTextStyle"
                android:layout_marginStart="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:text="@string/volume"
                />

            <include
                android:id="@+id/seekbarMusicVolume"
                layout="@layout/seekbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/playerViewMargin"
               />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                tools:itemCount="4"
                tools:listitem="@layout/fragment_music_selection_dialog_item"
               />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="end"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="@dimen/playerViewMargin"
                    android:layout_height="wrap_content"
                    android:text="@string/stop"
                    android:visibility="invisible"
                    android:textColor="@color/white"
                    android:id="@+id/buttonStop"
                    android:background="@drawable/music_fragment_button_background"
                    />

            </LinearLayout>
        </LinearLayout>

</layout>