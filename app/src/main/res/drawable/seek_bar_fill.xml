<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
        </shape>

    </item>

    <item android:id="@android:id/progress"> <!--progress color-->
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient android:startColor="#4475BE" android:endColor="#193661" android:angle="45" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress"> <!--secondaryProgress color-->
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient android:startColor="@color/WHITE" android:endColor="#F44336" />
            </shape>
        </clip>
    </item>
</layer-list>